# =========================
# Global environment template
# =========================

# Backend server
BACKEND_URL=http://localhost:5000

# Facial recognition service
FACIAL_RECOGNITION_URL=http://localhost:5001

# Dashboard URL
DASHBOARD_URL=http://localhost:3000

# Mobile app API base (used in mobile-app/src/constants/api.js)
MOBILE_API_BASE=http://localhost:5000

# MongoDB (used by backend/src/config/database.js)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/edupresence

# Firebase / Google Cloud (backend/src/config/firebase.js)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=service-account@your-project.iam.gserviceaccount.com

# JWT auth (backend)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Google OAuth (backend)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email service (backend)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Logging
LOG_LEVEL=debug